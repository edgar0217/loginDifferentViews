<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Registro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/output.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <!-- Boxicons para el icono del ojo -->
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="min-h-screen pt-20 text-gray-800">
    <header class="fixed top-0 left-0 w-full z-50 mt-8">
      <div class="max-w-7xl mx-auto px-4 py-8 flex justify-center">
        <h1 class="text-white text-4xl sm:text-6xl font-extrabold select-none">
          SISPREP
        </h1>
      </div>
    </header>
    <section
      class="flex items-center justify-center px-6 md:px-12 lg:px-24 py-16 min-h-screen"
    >
      <div
        class="w-full max-w-md bg-white/80 backdrop-blur-md rounded-xl shadow-lg p-8"
      >
        <h1 class="text-2xl font-bold text-center text-gray-900 mb-6">
          Registrar nuevo Usuario
        </h1>

        <% if (error) { %>
        <p class="text-center text-red-600 text-sm font-medium mb-4">
          <%= error %>
        </p>
        <% } %>

        <form class="space-y-4" method="POST" action="/register">
          <input
            type="text"
            name="nombre"
            placeholder="Nombre completo"
            required
            class="w-full p-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none text-sm"
          />
          <input
            type="text"
            name="usuario"
            placeholder="CURP"
            required
            class="w-full p-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none text-sm"
          />
          <input
            type="text"
            name="direccion"
            placeholder="Dirección"
            required
            class="w-full p-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none text-sm"
          />
          <input
            type="text"
            name="municipio"
            placeholder="Municipio"
            required
            class="w-full p-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none text-sm"
          />
          <input
            type="text"
            name="seccion_electoral"
            placeholder="Sección electoral"
            required
            class="w-full p-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none text-sm"
          />
          <input
            type="text"
            name="celular"
            placeholder="Celular"
            required
            class="w-full p-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none text-sm"
            oninput="this.value = this.value.replace(/[^0-9]/g, '')"
          />

          <!-- Campo Contraseña con botón de mostrar/ocultar -->
          <div>
            <div class="relative">
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Contraseña"
                required
                class="w-full p-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:outline-none text-sm pr-12"
              />
              <button
                type="button"
                id="togglePassword"
                tabindex="-1"
                class="absolute top-1/2 right-3 -translate-y-1/2 text-gray-500"
                aria-label="Mostrar/ocultar contraseña"
              >
                <i class="bx bx-show text-xl" id="iconEye"></i>
              </button>
            </div>
          </div>

          <button
            type="submit"
            class="w-full bg-[#00176B] hover:bg-[#326ac0] text-white font-medium rounded-lg text-sm px-5 py-2.5 transition-colors"
          >
            Registrar
          </button>

          <a
            href="/login"
            class="block text-center text-sm text-gray-700 hover:underline mt-4"
          >
            ¿Ya tienes cuenta? Iniciar sesión
          </a>
        </form>
      </div>
    </section>

    <script>
      // Mostrar/Ocultar contraseña
      const passwordInput = document.getElementById("password");
      const togglePassword = document.getElementById("togglePassword");
      const iconEye = document.getElementById("iconEye");
      togglePassword.addEventListener("click", function () {
        const isPassword = passwordInput.type === "password";
        passwordInput.type = isPassword ? "text" : "password";
        iconEye.className = isPassword
          ? "bx bx-hide text-xl"
          : "bx bx-show text-xl";
      });
    </script>
  </body>
</html>
