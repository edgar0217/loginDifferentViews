<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <title>Panel Superadmin - Tema Oscuro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>

  <body
    class="bg-gray-900 text-gray-200 p-6 min-h-screen font-sans antialiased"
  >
    <div class="max-w-7xl mx-auto flex flex-col gap-8">
      <!-- Header -->
      <header
        class="flex justify-between items-center py-4 border-b border-gray-700"
      >
        <h1
          class="text-3xl font-extrabold text-indigo-400 tracking-tight select-none"
        >
          Panel Superadmin
        </h1>
        <form action="/logout" method="GET">
          <button
            type="submit"
            class="bg-red-700 hover:bg-red-800 text-white px-5 py-2 rounded-md font-semibold transition"
            title="Cerrar sesión"
          >
            Cerrar sesión
          </button>
        </form>
        <form
          action="/superadmin/descargar-reporte"
          method="GET"
          target="_blank"
        >
          <button
            type="submit"
            class="bg-indigo-700 hover:bg-indigo-800 text-white px-5 py-2 rounded-md font-semibold transition"
            title="Descargar reporte PDF"
          >
            Descargar Reporte Completo
          </button>
        </form>
        <form
          action="/superadmin/descargar-reporte-poza-rica"
          method="GET"
          target="_blank"
          class="ml-2"
        >
          <button
            type="submit"
            class="bg-blue-700 hover:bg-blue-800 text-white px-5 py-2 rounded-md font-semibold transition"
            title="Reporte Poza Rica"
          >
            Reporte Poza Rica
          </button>
        </form>

        <form
          action="/superadmin/descargar-reporte-coatzintla"
          method="GET"
          target="_blank"
          class="ml-2"
        >
          <button
            type="submit"
            class="bg-green-700 hover:bg-green-800 text-white px-5 py-2 rounded-md font-semibold transition"
            title="Reporte Coatzintla"
          >
            Reporte Coatzintla
          </button>
        </form>
      </header>
      <div
        class="fixed bottom-6 right-6 bg-indigo-700 text-white px-4 py-2 rounded-lg shadow-lg font-semibold z-50 select-none"
      >
        Total de Registro de Eventos: <%= eventosCount %>
      </div>

      <main class="flex gap-10">
        <!-- Usuarios -->
        <section
          class="w-1/3 bg-gray-800 rounded-lg border border-gray-700 p-6 overflow-y-auto max-h-[calc(100vh-160px)]"
        >
          <h2 class="text-xl font-semibold mb-6 text-indigo-300 tracking-wide">
            Convencidos
          </h2>
          <ul class="divide-y divide-gray-700">
            <% usuarios.forEach((usuario) => { %>
            <li
              class="flex justify-between items-center py-3 hover:bg-gray-700 rounded-md px-2 transition"
            >
              <a
                href="/superadmin/editar-usuario/<%= usuario.id %>"
                class="text-indigo-300 hover:text-indigo-400 font-medium truncate max-w-[75%]"
              >
                <%= usuario.nombre %>
              </a>

              <% if (usuario.rol !== 'superadmin') { %>
              <form
                action="/superadmin/eliminar-usuario/<%= usuario.id %>"
                method="POST"
                class="inline eliminar-usuario-form"
              >
                <button
                  type="submit"
                  class="text-red-500 hover:text-red-600 text-sm font-semibold px-3 py-1 rounded transition"
                  title="Eliminar usuario"
                >
                  Eliminar
                </button>
              </form>
              <% } %>
            </li>
            <% }) %>
          </ul>

          <!-- Crear nuevo usuario -->
          <section class="mt-10">
            <h2
              class="text-xl font-semibold mb-6 text-indigo-300 tracking-wide"
            >
              Crear Nuevo Usuario
            </h2>
            <form
              action="/superadmin/crear-usuario"
              method="POST"
              class="space-y-5 max-w-full"
            >
              <div>
                <label
                  for="nombre"
                  class="block text-sm font-semibold mb-1 text-gray-300"
                  >Nombre completo</label
                >
                <input
                  type="text"
                  id="nombre"
                  name="nombre"
                  required
                  placeholder="Juan Pérez"
                  class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                />
              </div>
              <div>
                <label
                  for="usuario"
                  class="block text-sm font-semibold mb-1 text-gray-300"
                  >Usuario (único)</label
                >
                <input
                  type="text"
                  id="usuario"
                  name="usuario"
                  required
                  placeholder="juanperez"
                  class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                />
              </div>
              <div>
                <label
                  for="direccion"
                  class="block text-sm font-semibold mb-1 text-gray-300"
                  >Dirección</label
                >
                <input
                  type="text"
                  id="direccion"
                  name="direccion"
                  required
                  placeholder="Calle 1 #123, Col. Centro"
                  class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                />
              </div>
              <div>
                <label
                  for="municipio"
                  class="block text-sm font-semibold mb-1 text-gray-300"
                  >Municipio</label
                >
                <input
                  type="text"
                  id="municipio"
                  name="municipio"
                  required
                  placeholder="Torreón"
                  class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                />
              </div>
              <div>
                <label
                  for="seccion_electoral"
                  class="block text-sm font-semibold mb-1 text-gray-300"
                  >Sección electoral</label
                >
                <input
                  type="text"
                  id="seccion_electoral"
                  name="seccion_electoral"
                  required
                  placeholder="1234"
                  class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                />
              </div>
              <div>
                <label
                  for="celular"
                  class="block text-sm font-semibold mb-1 text-gray-300"
                  >Celular</label
                >
                <input
                  type="text"
                  id="celular"
                  name="celular"
                  required
                  placeholder="8711234567"
                  oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                  class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                />
              </div>
              <div>
                <label
                  for="password"
                  class="block text-sm font-semibold mb-1 text-gray-300"
                  >Contraseña</label
                >
                <input
                  type="password"
                  id="password"
                  name="password"
                  required
                  placeholder="********"
                  class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                />
              </div>
              <div>
                <label
                  for="passwordConfirm"
                  class="block text-sm font-semibold mb-1 text-gray-300"
                  >Confirmar Contraseña</label
                >
                <input
                  type="password"
                  id="passwordConfirm"
                  name="passwordConfirm"
                  required
                  placeholder="********"
                  class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                />
              </div>
              <div>
                <label
                  for="rol"
                  class="block text-sm font-semibold mb-1 text-gray-300"
                  >Rol</label
                >
                <select
                  id="rol"
                  name="rol"
                  required
                  class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                >
                  <option value="alumno">Convencido</option>
                  <option value="admin">Administrador</option>
                </select>
              </div>
              <button
                type="submit"
                class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 rounded-md transition"
              >
                Crear Usuario
              </button>
            </form>
          </section>
        </section>

        <!-- Edición usuario -->
        <section
          class="flex-1 bg-gray-800 rounded-lg border border-gray-700 p-6 max-h-[calc(100vh-160px)] overflow-y-auto"
        >
          <h2
            id="titulo-edicion"
            class="text-xl font-semibold mb-6 text-indigo-300 hidden select-none"
          ></h2>
          <form
            action=""
            method="POST"
            class="space-y-5 max-w-full"
            id="form-editar-usuario"
            style="display: none"
          >
            <div>
              <label
                for="nombre-editar"
                class="block text-sm font-semibold mb-1 text-gray-300"
                >Nombre completo</label
              >
              <input
                type="text"
                id="nombre-editar"
                name="nombre"
                required
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
              />
            </div>
            <div>
              <label
                for="usuario-editar"
                class="block text-sm font-semibold mb-1 text-gray-300"
                >Usuario (único)</label
              >
              <input
                type="text"
                id="usuario-editar"
                name="usuario"
                required
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
              />
            </div>
            <div>
              <label
                for="direccion-editar"
                class="block text-sm font-semibold mb-1 text-gray-300"
                >Dirección</label
              >
              <input
                type="text"
                id="direccion-editar"
                name="direccion"
                required
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
              />
            </div>
            <div>
              <label
                for="municipio-editar"
                class="block text-sm font-semibold mb-1 text-gray-300"
                >Municipio</label
              >
              <input
                type="text"
                id="municipio-editar"
                name="municipio"
                required
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
              />
            </div>
            <div>
              <label
                for="seccion_electoral-editar"
                class="block text-sm font-semibold mb-1 text-gray-300"
                >Sección electoral</label
              >
              <input
                type="text"
                id="seccion_electoral-editar"
                name="seccion_electoral"
                required
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
              />
            </div>
            <div>
              <label
                for="celular-editar"
                class="block text-sm font-semibold mb-1 text-gray-300"
                >Celular</label
              >
              <input
                type="text"
                id="celular-editar"
                name="celular"
                required
                oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
              />
            </div>
            <div>
              <label
                for="rol-editar"
                class="block text-sm font-semibold mb-1 text-gray-300"
                >Rol</label
              >
              <select
                id="rol-editar"
                name="rol"
                required
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
              >
                <option value="alumno">Convencidos</option>
                <option value="admin">Administrador</option>
              </select>
            </div>
            <div>
              <label
                for="password-editar"
                class="block text-sm font-semibold mb-1 text-gray-300"
                >Nueva contraseña (opcional)</label
              >
              <input
                type="password"
                id="password-editar"
                name="password"
                placeholder="Deja vacío para no cambiar"
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
              />
            </div>
            <div>
              <label
                for="passwordConfirm-editar"
                class="block text-sm font-semibold mb-1 text-gray-300"
                >Confirmar contraseña</label
              >
              <input
                type="password"
                id="passwordConfirm-editar"
                name="passwordConfirm"
                placeholder="Confirma la nueva contraseña"
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
              />
            </div>
            <div class="flex gap-4">
              <button
                type="submit"
                class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 rounded-md transition"
              >
                Guardar cambios
              </button>
              <button
                type="button"
                id="btnCancelarEdicion"
                class="flex-1 bg-red-700 hover:bg-red-800 text-white font-semibold py-2 rounded-md transition"
              >
                Cancelar
              </button>
            </div>
          </form>

          <p id="mensaje-inicio" class="text-gray-400 text-lg select-none">
            Haz clic en un usuario para ver y editar sus datos.
          </p>
        </section>
      </main>

      <!-- Eventos -->
<section
  id="eventos"
  class="max-w-7xl mx-auto mt-10 bg-gray-800 rounded-lg border border-gray-700 p-6 max-h-[calc(100vh-150px)] overflow-y-auto"
>

        <h2 class="text-xl font-semibold mb-6 text-indigo-300 tracking-wide">
          Eventos
        </h2>
        <ul
          class="divide-y divide-gray-700 max-h-[calc(100vh-400px)] overflow-y-auto"
        >
          <% eventos.forEach((evento) => { %>
          <li
            class="py-4 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 hover:bg-gray-700 rounded-md px-3 transition"
            data-evento-id="<%= evento.id %>"
            data-evento-titulo="<%= evento.titulo %>"
            data-evento-descripcion="<%= evento.descripcion.replace(/"/g, '&quot;') %>"
            data-evento-usuarioid="<%= evento.usuarioId %>"
          >
            <div class="flex-1 min-w-0">
              <strong class="block text-lg truncate text-indigo-200"><%= evento.titulo %></strong>
              <span class="text-gray-400 text-sm">
                Creado por: <%= evento.usuario.nombre %> (<%= evento.usuario.usuario %>)
              </span>
              <br />
              <span class="text-gray-400 text-sm">
                Fecha creación: <%= new Date(evento.createdAt).toLocaleDateString('es-MX', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' }) %>
              </span>
            </div>

            <% if (evento.url_imagen) { %>
            <img
              src="<%= evento.url_imagen %>"
              alt="Imagen del evento"
              class="w-32 h-20 object-cover rounded-md"
            />
            <% } %>

            <div class="flex gap-2">
              <button
                class="editar-evento-btn text-indigo-400 hover:text-indigo-600 text-sm font-semibold px-3 py-1 rounded transition"
                title="Editar evento"
                type="button"
              >
                Editar
              </button>
              <form
                action="/superadmin/eliminar-evento/<%= evento.id %>"
                method="POST"
                class="inline eliminar-evento-form"
              >
                <button
                  type="submit"
                  class="text-red-500 hover:text-red-600 text-sm font-semibold px-3 py-1 rounded transition"
                  title="Eliminar evento"
                >
                  Eliminar
                </button>
              </form>
            </div>
          </li>
          <% }) %>
        </ul>

        <!-- Formulario oculto para edición -->
        <section
          id="form-editar-evento-section"
          class="mt-10 bg-gray-900 rounded-lg border border-gray-700 p-6 hidden max-w-4xl mx-auto"
        >
          <h3 class="text-xl font-semibold mb-6 text-indigo-300 tracking-wide">
            Editar Evento
          </h3>
          <form
            id="form-editar-evento"
            method="POST"
            action=""
            class="space-y-5"
          >
            <div>
              <label for="titulo-editar" class="block font-semibold mb-1">Título</label>
              <input
                type="text"
                id="titulo-editar"
                name="titulo"
                required
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200"
              />
            </div>

            <div>
              <label for="descripcion-editar" class="block font-semibold mb-1">Descripción</label>
              <textarea
                id="descripcion-editar"
                name="descripcion"
                rows="4"
                required
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200"
              ></textarea>
            </div>

            <div>
              <label for="usuarioId-editar" class="block font-semibold mb-1">Asignar Usuario</label>
              <select
                id="usuarioId-editar"
                name="usuarioId"
                required
                class="w-full bg-gray-700 border border-gray-600 rounded-md px-3 py-2 text-gray-200"
              >
                <% usuarios.forEach(usuario => { %>
                  <option value="<%= usuario.id %>"><%= usuario.nombre %> (<%= usuario.usuario %>)</option>
                <% }) %>
              </select>
            </div>

            <div class="flex gap-4">
              <button
                type="submit"
                class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-2 rounded-md"
              >
                Guardar Cambios
              </button>
              <button
                type="button"
                id="btnCancelarEdicionEvento"
                class="bg-red-700 hover:bg-red-800 text-white font-semibold px-6 py-2 rounded-md"
              >
                Cancelar
              </button>
            </div>
          </form>
        </section>

        <!-- Paginación -->
        <div class="flex justify-center mt-6 space-x-3 select-none">
          <% if (currentPage > 1) { %>
          <a
            href="?page=<%= currentPage - 1 %>#eventos"
            class="px-3 py-1 bg-indigo-600 rounded hover:bg-indigo-700 text-white"
            >Anterior</a
          >
          <% } else { %>
          <span
            class="px-3 py-1 bg-gray-700 text-gray-500 rounded cursor-not-allowed"
            >Anterior</span
          >
          <% } %>

          <% for (let i = 1; i <= totalPages; i++) { %>
            <% if (i === currentPage) { %>
            <span class="px-3 py-1 bg-indigo-800 rounded font-semibold text-white"><%= i %></span>
            <% } else { %>
            <a
              href="?page=<%= i %>#eventos"
              class="px-3 py-1 bg-indigo-600 rounded hover:bg-indigo-700 text-white"
              ><%= i %></a
            >
            <% } %>
          <% } %>

          <% if (currentPage < totalPages) { %>
          <a
            href="?page=<%= currentPage + 1 %>#eventos"
            class="px-3 py-1 bg-indigo-600 rounded hover:bg-indigo-700 text-white"
            >Siguiente</a
          >
          <% } else { %>
          <span
            class="px-3 py-1 bg-gray-700 text-gray-500 rounded cursor-not-allowed"
            >Siguiente</span
          >
          <% } %>
        </div>
      </section>
    </div>

    <script src="/js/superAdmin.js"></script>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const botonesEditar = document.querySelectorAll(".editar-evento-btn");
        const seccionEditar = document.getElementById("form-editar-evento-section");
        const formEditar = document.getElementById("form-editar-evento");
        const btnCancelar = document.getElementById("btnCancelarEdicionEvento");

        botonesEditar.forEach((btn) => {
          btn.addEventListener("click", (e) => {
            const li = e.target.closest("li[data-evento-id]");
            if (!li) return;

            const eventoId = li.getAttribute("data-evento-id");
            const titulo = li.getAttribute("data-evento-titulo");
            const descripcion = li.getAttribute("data-evento-descripcion");
            const usuarioId = li.getAttribute("data-evento-usuarioid");

            // Rellenar formulario
            document.getElementById("titulo-editar").value = titulo;
            document.getElementById("descripcion-editar").value = descripcion;
            document.getElementById("usuarioId-editar").value = usuarioId;

            // Actualizar action del formulario
            formEditar.action = `/superadmin/editar-evento/${eventoId}`;

            // Mostrar formulario
            seccionEditar.classList.remove("hidden");

            // Scroll para que se vea el formulario
            seccionEditar.scrollIntoView({ behavior: "smooth" });
          });
        });

        btnCancelar.addEventListener("click", () => {
          seccionEditar.classList.add("hidden");
          formEditar.reset();
        });
      });
    </script>
  </body>
</html>
